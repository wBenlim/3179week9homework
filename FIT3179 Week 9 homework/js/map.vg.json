{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Macaroni Penguin Foraging Zones (Heard Island)",
  "width": 600,
  "height": 500,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/3179week9homework/Vega-Lite/main/js/Australiamapwithgraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [{"filter": "datum.id == '36'"}],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/3179week9homework/Vega-Lite/main/js/Australiamapwithgraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": "transparent", "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/3179week9homework/Vega-Lite/main/data/MacaroniPenguin.csv"
      },
      "mark": "circle",
      "encoding": {
        "longitude": {"field": "decimalLongitud", "type": "quantitative"},
        "latitude": {"field": "decimalLatitude", "type": "quantitative"},
        "size": {
          "aggregate": "count",
          "type": "quantitative",
          "title": "Observation Count"
        },
        "color": {
          "aggregate": "count",
          "type": "quantitative",
          "title": "Observation Count"
        },
        "tooltip": [
          {"field": "vernacularName", "type": "nominal"},
          {"field": "scientificName", "type": "nominal"},
          {"field": "decimalLatitude", "type": "quantitative"},
          {"field": "decimalLongitud", "type": "quantitative"}
        ]
      }
    }
  ],
  "projection": {"type": "mercator", "center": [135, -25], "scale": 800}
}
