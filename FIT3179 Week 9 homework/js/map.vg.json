{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Macaroni Penguin Foraging Zones as time progress (Heard Island)",
  "width": 600,
  "height": 500,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/wBenlim/3179week9homework/main/FIT3179%20Week%209%20homework/js/Australiamapwithgraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "beige", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/wBenlim/3179week9homework/main/FIT3179%20Week%209%20homework/js/Australiamapwithgraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": "transparent", "stroke": "red", "opacity": 0.3}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/wBenlim/3179week9homework/main/FIT3179%20Week%209%20homework/data/MacaroniPenguin.csv"
      },
      "mark": "circle",
      "encoding": {
        "longitude": {"field": "decimalLongitude", "type": "quantitative"},
        "latitude": {"field": "decimalLatitude", "type": "quantitative"},
        "size": {
          "aggregate": "count",
          "type": "quantitative",
          "title": "Observation Count"
        },
        "color": {
          "aggregate": "count",
          "type": "quantitative",
          "title": "Observation Count"
        },
        "tooltip": [
          {"field": "vernacularName", "type": "nominal"},
          {"field": "scientificName", "type": "nominal"},
          {"field": "decimalLatitude", "type": "quantitative"},
          {"field": "decimalLongitude", "type": "quantitative"},
          {"field": "day", "type": "ordinal"}
        ]
      }
    }
  ],
  "projection": {"type": "mercator", "center": [100, -50], "scale": 300}
}
